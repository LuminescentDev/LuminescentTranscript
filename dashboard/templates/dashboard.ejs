<%- include("partials/header", { bot, user, path, title: "Select server" }) %>

<br></br>
<h1 style="text-align: center;">Select a Server</h1>
<br></br>
<div style="display: flex; flex-wrap: wrap; justify-content: center;">
  <% user.guilds.forEach(guild => {
      const permsOnGuild = new perms(guild.permissions_new);
      if (!permsOnGuild.has(perms.FLAGS.MANAGE_GUILD) || !bot.guilds.cache.get(guild.id)) return;
  %>
  <a href="/dashboard/<%- guild.id %>" style="text-decoration: none;">
    <div class="card" style="width: 18rem; margin: 2rem;">
      <%- guild.icon ? `<img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}" class="card-img-top" style="width: 12rem; margin: 3rem; border-radius: 50%;">` : `<img src="/assets/images/placeholder.png" class="card-img-top" style="width: 12rem; margin: 3rem; border-radius: 50%;">` %>
      <h2 class="card-title" style="font-size:30px"><%= guild.name %></h2>
    </div>
  </a>
  <%
      });
  %>
</div>

<%- include("partials/footer") %>